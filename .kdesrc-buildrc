# Autogenerated by kdesrc-build-setup. You may modify this file if desired.
global

    # KDE install directory
    kdedir /usr/local

    # Directory for downloaded source code
    source-dir ~/projects/KDE

    # Directory to build KDE into before installing
    build-dir build

    # Use multiple cores for building. Other options to GNU make may also be
    # set.
    make-options -j5

    make-install-prefix sudo -S

    # Login to use for SVN. Anonymous SVN can be used by just deleting this
    # option.
    # Note that ssh-agent must be running and loaded with the right key.
    svn-server svn+ssh://svn@svn.kde.org/home/kde

end global

module-set ktp
  repository kde-projects
  use-modules libkpeople ktp-common-internals ktp-accounts-kcm ktp-approver ktp-auth-handler ktp-contact-list ktp-filetransfer-handler ktp-kded-module ktp-send-file ktp-text-ui
end module-set
