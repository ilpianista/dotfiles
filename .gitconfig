[user]
    email = me@andreascarpino.it
    name = Andrea Scarpino
[sendemail]
    smtpencryption = tls
    smtpserver = smtp.googlemail.com
    smtpuser = bash.lnx@gmail.com
    smtpserverport = 587
[color]
    ui = auto
#[commit]
#    template = /home/andrea/.commit-template
[core]
    excludesfile = /home/andrea/.gitexcludes
    autocrlf = input
[merge]
    tool = vimdiff
[diff]
    renameLimit = 7974
[push]
    default = nothing

[url "git://anongit.kde.org/"]
    insteadOf = kde:
[url "git@git.kde.org:"]
    pushInsteadOf = kde:
[url "git://git.andreascarpino.it/"]
    insteadOf = me:
[url "git@git.andreascarpino.it:"]
    pushInsteadOf = me:

[github]
    user = scarpin0
[alias]
    post-review = !post-review --guess-summary --guess-description --username=scarpino --parent=master --tracking-branch=origin/master
