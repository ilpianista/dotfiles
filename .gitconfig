[user]
  email = me@andreascarpino.it
  name = Andrea Scarpino
[sendemail]
  smtpencryption = tls
  smtpserver = smtp.googlemail.com
  smtpuser = bash.lnx@gmail.com
  smtpserverport = 587
[color]
  ui = auto
#[commit]
#  template = $HOME/.commit-template
[core]
  excludesfile = $HOME/.gitexcludes
  autocrlf = input
	editor = vim
[merge]
  tool = vimdiff
[diff]
  renames = true
  renameLimit = 7974
[push]
  default = simple
[format]
	pretty = oneline
[status]
	short = true

[url "git://anongit.kde.org/"]
  insteadOf = kde:
[url "git@git.kde.org:"]
  pushInsteadOf = kde:

[github]
  user = andreascarpino
[alias]
  post-review = !post-review --guess-summary --guess-description --username=scarpino --parent=master --tracking-branch=origin/master
	fakepush = push --dry-run
